<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/view_notes_item_card_elevation"
    app:cardCornerRadius="@dimen/view_notes_item_corner_radius"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/view_notes_item_padding"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_notes_item_height">

    <TextView
        tools:text="text"
        android:textSize="@dimen/view_notes_item_primary_text_size"
        android:textColor="@android:color/primary_text_light"
        android:id="@+id/primary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="2"
        android:layout_gravity="bottom"
        tools:text="text"
        android:textSize="@dimen/view_notes_item_secondary_text_size"
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/secondary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>